{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "sourceMap": true,
      "baseUrl": "src",
      "outDir": "./dist",
      "listFiles": true,
      "esModuleInterop": true,
      "skipLibCheck": true
  },
  "include": [
      "./src/**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "dist",
      "**/*.spec.ts"
  ]
}